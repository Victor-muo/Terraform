EC2-Instance:

provider "aws" {
  region = "us-east-1"
}

# Specify the EC2 details
resource "aws_instance" "example" {
  ami           = "ami-08d4ac5b634553e16"
  instance_type = "t2.micro"
  
  tags = {
   Name = "test_instance"
   }
}

# Create S3 bucket
resource "aws_s3_bucket" "example" {
  # NOTE: S3 bucket names must be unique across _all_ AWS accounts
  bucket = "samples3bucket"
}

#backend block to store .tfstate file remotely
terraform{
  backend "s3" {
     bucket = "terraform-backend-statefile222"
     key = "default/terraform.tfstate" # path & file which will hold the state #
     region = "us-east-1"
  }
}
